#include <iostream>
using namespace std;

int main() {
    int a , b;
    char operation;
    
    cout << "Enter the first operand: " << endl;
    cin >> a;
    
    cout << "Enter the second operand: " << endl;
    cin >> b;
    
    cout << "Enter the operation: " << endl;
    cin >> operation ;
    
    switch(operation){
        case '+': 
        cout << "Entered operation is a+b= " << a+b << endl;
        break;
        
        case '-': 
        cout << "Entered operation is a-b= " << a-b << endl;
        break;
        
        case '*': 
        cout << "Entered operation is a*b= " << a*b << endl;
        break;
        
        case '/': 
        cout << "Entered operation is a+b= " << a/b << endl;
        break; 
        
        default:
        cout<< "Enter a valid expression" << endl;
        }
    
    return 0;
}
