#include <iostream>
using namespace std;

bool linearSearch( int Arr[], int Size, int Key){
    for(int i=0; i<Size; i++){
        if(Arr[i]==Key){
            return 1;
        }
    }
    return 0;
}

int main(){
    int arr[100];
    int size;
    cout << "Enter the size of array: " << endl;
    cin >> size;
    
    cout << "Enter the elements in array: " << endl;
    for(int i=0; i<size; i++){
        cin >> arr[i];
    }
    int key;
    cout << "Enter the key element: "<< endl;
    cin >> key;
    
    bool found =linearSearch( arr , 3 , 7);
    if(found==1){
        cout<< "Found" << endl;
    }
    else{
        cout << "Not in array" << endl;
    }
    return 0;
}
